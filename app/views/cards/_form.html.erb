  <%= form_with(model: [@list, @card], local: true, class: "ui form") do |f| %>
    <div class="field">
      <%= f.label "Card Title" %>
      <%= f.text_field :title, required: true, class: "input" %>
    </div>
    <div class="field">
      <%= f.label "Description" %>
      <%= f.text_field :description, class: "input" %>
    </div>
    <div class="field">
      <%= f.label "Priority" %>
      <%= f.number_field :priority, required: true, class: "input" %>
    </div>
  <%= f.submit nil, class: "ui blue button" %>
<%end%>