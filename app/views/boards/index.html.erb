<%= button_to 'Log Out', destroy_user_session_path, method: :delete %>
<h2>Welcome, <%= current_user.first_name %></h2>
<hr>
<%= link_to 'Add Board', new_board_path %>
<h3>Your Boards:</h3>
<ul>
<h2><%= @boards.length <= 0 ? "No Boards - Add One" : "" %></h2>
  <% @boards.each do |board| %>
    <li>
      <%= board.name %>
    </li>
    <% end %>
</ul>