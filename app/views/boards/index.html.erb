<h1><%= current_user.first_name %>'s Boards</h1>
<%= link_to 'New Board', new_board_path, class:"ui green button inverted" %>
<div class="ui divider"></div>
<h2><%= @boards.length <= 0 ? "No Boards - Add One" : "" %></h2>
  <div class="ui grid">
  <% @boards.each do |board| %>
  <div class="three wide column">
  <div class="ui raised center aligned segment">
      <h3><%= link_to board.name, board_path(board)%></h3> 
      <%= link_to "Delete Board", board, method: :delete, class: "ui red mini button inverted" %>
       </div>
    </div>
  <% end %>
</div>
 
